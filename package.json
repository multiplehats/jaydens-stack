{
  "name": "acme-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,svelte}\"",
    "prepare": "husky install",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "eslint": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "turbo": "latest"
  },
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx,svelte}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@7.15.0"
}
