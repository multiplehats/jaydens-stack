{
    "extends": "@acme/tsconfig/tsconfig-svelte-library.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$components": [
                "./components"
            ],
            "$components/*": [
                "./components/*"
            ]
        },
    },
    "include": [
        "./index.ts",
        "./components/**/*.d.ts",
        "./components/**/*.ts",
        "./components/**/*.js",
        "./components/**/*.svelte"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ]
}